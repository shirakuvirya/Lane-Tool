{
  "name": "waypointedit-plus",
  "version": "2.0.0",
  "description": "WaypointEdit+ - Fixed Point Cloud Viewer with Working Tools",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "point-cloud",
    "waypoints",
    "interpolation",
    "working-tools",
    "fixed-implementation"
  ],
  "author": "WaypointEdit+ Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.waypointedit.plus.viewer.fixed",
    "productName": "WaypointEdit+ Fixed",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "preload.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}